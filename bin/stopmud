#!/bin/bash

# get dir of this shell
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# common function to stop process with pid file
function kill_pid() {
  if [[ -f $1 ]]; then
    kill `cat $1`
    rm $1
  fi
}

kill_pid ${DIR}/mudos.pid

# another option:
# forever stop `which webtelnet` 8080 4000 -w ${DIR}/../www
#kill_pid ${DIR}/webtelnet.pid
